{
  "name": "@curvenote/validators",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Schema validation functions and error reporting framework",
  "author": "Franklin Koch <franklin@curvenote.com>",
  "homepage": "https://github.com/curvenote/curvenote#readme",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/curvenote/curvenote.git"
  },
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "npm run clean && tsc -p .",
    "dev": "tsc -w --preserveWatchOutput -p .",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/!(*.spec).ts\" -c ./.eslintrc.js",
    "lint:format": "npx prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "build:esm": "tsc --project ./tsconfig.json --module es2015   --outDir dist/esm",
    "build:cjs": "tsc --project ./tsconfig.json --module commonjs --outDir dist/cjs",
    "declarations": "tsc --project ./tsconfig.json --declaration --emitDeclarationOnly --outDir dist/types",
    "build": "npm-run-all -l clean -p build:cjs build:esm declarations"
  },
  "bugs": {
    "url": "https://github.com/curvenote/curvenote/issues"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "eslint": "^8.21.0",
    "eslint-config-curvenote": "*",
    "jest": "28.1.3",
    "jest-extended": "^3.0.1",
    "jest-fixtures": "^0.6.0",
    "jest-to-match-shape-of": "^1.3.2",
    "moment": "^2.29.4",
    "npm-run-all": "^4.1.5",
    "prettier": "latest",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "typescript": "^4.6.3"
  }
}
