    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/curvenote/curvenote.git"
  },
  "scripts": {
    "prepush": "npm run lint:format:fix; npm run lint:circular; npm run lint; npm run compile; npm run test:ci; npm run test:unit; npm run test:integration",
    "pp": "npm run prepush",
    "clean": "rimraf dist _build api && find . -name '.turbo' -type d -prune -exec rm -rf '{}' +",
    "lint": "npx eslint -c .eslintrc.cjs \"src/**/*.{ts,tsx}\"",
    "lint:format": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint:format:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint:circular": "npx madge --circular --extensions ts,tsx src",
    "config": "npx @app-config/cli@2 generate",
    "build": "tsup && npx tsc --emitDeclarationOnly --declarationMap --project tsconfig.json",
    "dev": "tsc -w",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate:jwk-keys": "node scripts/generate-jwk-keys.mjs",
    "changeset": "changeset",
    "version": "changeset version && npm install"
  },
