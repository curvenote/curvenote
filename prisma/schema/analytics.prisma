enum AnalyticsDashboardType {
  PLATFORM
  SITE
}

model AnalyticsDashboard {
  id            String                 @id
  date_created  String
  date_modified String
  title         String
  description   String?
  type          AnalyticsDashboardType
  url           String
  site_id       String?
  enabled       Boolean                @default(true)

  // Relations
  site Site? @relation(fields: [site_id], references: [id])

  // Constraints
  @@index([type])
  @@index([site_id])
  @@index([enabled])
}
