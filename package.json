{
  "private": true,
  "workspaces": [
    "mystmd/packages/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@curvespace/default",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean --parallel && find . -name '.turbo' -type d -prune -exec rm -rf '{}' +",
    "lint": "turbo run lint --filter='@curvenote/*' --filter='curvenote'",
    "lint:format": "turbo run lint:format --filter='@curvenote/*' --filter='curvenote'",
    "lint:circular": "madge -c packages/*/src/*",
    "test": "turbo run test --filter='curvenote' --filter='@curvenote/*'",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version": "changeset version && npm install",
    "publish": "npm run clean && npm run build -- --force && changeset publish && git push --follow-tags",
    "publish:ci": "npm run build && changeset publish && git push --follow-tags",
    "bump:myst": "npm-upgrade-monorepo -w 'packages/*' 'myst-* @myst-theme/* @curvenote/*'"
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.2",
    "@types/node": "^24.6.2",
    "esbuild": "^0.15.12",
    "eslint-config-curvenote": "^0.0.4",
    "madge": "^6.1.0",
    "npm-run-all": "^4.1.5",
    "npm-upgrade-monorepo": "^1.2.6",
    "prettier": "latest",
    "rimraf": "^3.0.2",
    "turbo": "latest",
    "typescript": "^5.9.3",
    "vitest": "^2.1.2"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.10.0",
  "dependencies": {
    "@changesets/changelog-github": "^0.5.1"
  },
  "overrides": {
    "@types/node": "^24.6.2",
    "ws": "^8.18.1",
    "@types/ws": "^8.18.1"
  }
}
