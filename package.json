{
  "private": true,
  "type": "module",
  "workspaces": [
    "mystmd/packages/*",
    "packages/*",
    "ee/*",
    "extensions/*/packages/*",
    "platform/scms"
  ],
  "scripts": {
    "prepare": "husky",
    "preinstall": "rm -f ./platform/scms/package.json",
    "postinstall": "npm run generate:extensions",
    "generate:extensions": "node platform/scms/scripts/generate-extensions.js",
    "prisma:format": "npx prisma format --schema=./prisma/schema",
    "db:studio": "prisma studio --schema=./prisma/schema/",
    "dev:db:reset": "npx prisma migrate reset --schema=./prisma/schema",
    "dev:db:migrate": "npx prisma migrate dev --schema=./prisma/schema",
    "test:db:reset": "dotenv -e .env.test -- npx prisma db push --force-reset --schema=./prisma/schema; dotenv -e .env.test -- tsx prisma/seed.test.mts",
    "config": "npx @app-config/cli@2 generate",
    "build": "npm run config && turbo run build --filter='!@curvenote/scms'",
    "build:scms": "cd platform/scms && npm run build",
    "build:web": "turbo run build --filter=@curvespace/default",
    "dev:all": "turbo run dev --parallel",
    "dev": "turbo run dev --parallel --filter='./packages/*' --filter='./ee/*' --filter='./extensions/*/packages/*'",
    "clean": "turbo run clean --parallel && find . -name '.turbo' -type d -prune -exec rm -rf '{}' +",
    "lint": "turbo run lint --filter='@curvenote/*' --filter='curvenote'",
    "lint:format": "turbo run lint:format --filter='@curvenote/*' --filter='curvenote'",
    "lint:circular": "madge -c packages/*/src/* ee/*/src/*",
    "test": "turbo run test --filter='curvenote' --filter='@curvenote/*'; npm run test:scms",
    "test:scms": "cd platform/scms && npm run test:unit",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version": "npm install && changeset version && npx tsx scripts/sync-scms-template-version.ts && npm install",
    "publish": "npm run clean && npm run build -- --force && changeset publish && git push --follow-tags",
    "publish:ci": "npm run build && changeset publish && git push --follow-tags",
    "bump:myst": "npm-upgrade-monorepo -w 'packages/*' 'myst-* @myst-theme/* @curvenote/*'",
    "nmnuke": "node scripts/remove-node-modules.mjs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.2",
    "@types/node": "^24.6.2",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/parser": "^8.50.0",
    "esbuild": "^0.15.12",
    "eslint-config-curvenote": "^0.0.4",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "madge": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "npm-upgrade-monorepo": "^1.2.6",
    "prettier": "latest",
    "prisma": "^7.2.0",
    "rimraf": "^3.0.2",
    "tsx": "^4.21.0",
    "turbo": "latest",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^2.1.2"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.10.0",
  "dependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@prisma/client": "^7.2.0",
    "dotenv": "^17.2.3"
  },
  "overrides": {
    "@types/node": "^24.6.2",
    "ws": "^8.18.1",
    "@types/ws": "^8.18.1",
    "vite": {
      "rollup": "npm:@rollup/wasm-node"
    },
    "@curvenote/scms-core": {
      "zod-form-data": {
        "zod": "^4.1.12"
      }
    },
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint-config-curvenote": {
      "@typescript-eslint/eslint-plugin": "^8.50.0",
      "@typescript-eslint/parser": "^8.50.0"
    }
  }
}
